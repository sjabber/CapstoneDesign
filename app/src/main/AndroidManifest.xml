<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstone_design">

<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddActivity"></activity>
        <activity android:name=".Setting"></activity>
        <activity android:name=".Setting_name"></activity>
        <activity android:name=".EditActivity"></activity>
        <activity android:name=".TouchInput" android:theme="@style/Theme.Transparent"></activity>
        <activity android:name=".TouchInput2" android:theme="@style/Theme.Transparent"></activity>
        <activity android:name=".TouchOutput"></activity>


        <service
            android:name=".FloatingViewService"
            android:enabled="true"
            android:permission="android.permission.SYSTEM_ALERT_WINDOW"
            android:exported="false" />
    </application>

</manifest>